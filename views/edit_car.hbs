{{#extends 'base'}}
{{#block 'content'}}
<form  method = "POST">
  <div>
      <label class="form-label">Brand</label>
      <input type=text name="Brand" class="form-control" value="{{carRecord.Brand}}"/>
  </div>
  <div>
      <label class="form-label">Model</label>
      <input type=text name="Model" class="form-control" value="{{carRecord.Model}}"/>
  </div>
  <div>
      <label class="form-label">Power Type</label>
      <select name="Power" class="form-control">
          <option value="Hybrid" {{#eq carRecord.Power 'Hybrid'}}selected{{/eq}}>Hybrid</option>
          <option value="Petrol"{{#eq carRecord.Power 'Petrol'}}selected{{/eq}}>Petrol</option>
          <option value="Diesel" {{#eq carRecord.Power 'Diesel'}}selected{{/eq}}>Diesel</option>
      </select>
  </div>
  <div>
      <label class="form-label">Type of Vehicle</label>
      <select name="Type" class="form-control">
          <option value="MPV" {{#eq CarRecord.Type 'MPV'}}selected{{/eq}}>MPV</option>
          <option value="SUV"{{#eq CarRecord.Type 'SUV'}}selected{{/eq}}>SUV</option>
          <option value="Saloon"{{#eq CarRecord.Type 'Saloon'}}selected{{/eq}}>Saloon</option>
      </select>
  </div>
  <div>
      <label class="form-label">No. of Seaters</label>
      <select name="Seaters" class="form-control">
          <option value="Five" {{#eq CarRecord.Seaters 'Five'}}selected{{/eq}}>Five Seaters</option>
          <option value="Seven" {{#eq CarRecord.Seaters 'Seven'}}selected{{/eq}}>Seven Seaters</option>
      </select>
  </div>
  <div>
      <label class="form-label">Year Made</label>
      <input type=text name="Year" class="form-control" value="{{carRecord.Year}}">
  </div>
  <div>
      <label class="form-label">Price</label>
      <input type=text name="Cost" class="form-control" value="{{carRecord.Cost}}">
  </div>
  <div>
      <label class="form-label">Car accessories</label>
      <div>
          <input class="form-check-input" name="Accessories" type="checkbox" value="Radio" 
          {{#inArray carRecord.Accessories "Radio"}}checked{{/inArray}}>
          <label class="form-check-label">Radio</label>
          <input class="form-check-input" name="Accessories" type="checkbox" value="Aircon" {{#inArray carRecord.Accessories "Aircon"}}checked{{/inArray}}><label class="form-check-label">Aircon</label>
          <input class="form-check-input" name="Accessories" type="checkbox" value="Leather" {{#inArray carRecord.Accessories "Leather"}}checked{{/inArray}}><label class="form-check-label">Leather Seats</label>
      </div>
  </div> 
  <input type="submit" class="btn btn-primary mt-3"/>
</form>
{{/block}}
{{/extends}}